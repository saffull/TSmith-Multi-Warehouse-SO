<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <!--.2 .3 .4 .1-->
        <TextView
            android:id="@+id/count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:fontFamily="@font/fabrica"
            android:text="#"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/docno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:fontFamily="@font/fabrica"
            android:gravity="left"
            android:text="Doc No"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/voucherno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:fontFamily="@font/fabrica"
            android:gravity="left"
            android:paddingRight="5px"
            android:text="Voucher no"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/vouchertype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:fontFamily="@font/fabrica"
            android:gravity="left"
            android:paddingRight="5px"
            android:text="Voucher Type"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/voucherdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:fontFamily="@font/fabrica"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="Voucher Date"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <!--.2 .3 .4 .1-->
        <TextView
            android:id="@+id/refno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:fontFamily="@font/fabrica"
            android:text="Ref No"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/narration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:fontFamily="@font/fabrica"
            android:gravity="left"
            android:text="Narration"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/billno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:fontFamily="@font/fabrica"
            android:gravity="center"
            android:paddingRight="5px"
            android:text="Bill No"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/debit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:fontFamily="@font/fabrica"
            android:gravity="center"
            android:paddingRight="5px"
            android:text="Debit"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/credit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:fontFamily="@font/fabrica"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="Credit"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@color/black" />

</LinearLayout>