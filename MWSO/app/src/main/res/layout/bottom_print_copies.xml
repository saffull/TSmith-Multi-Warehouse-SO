<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_print_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:behavior_peekHeight="?actionBarSize"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:id="@+id/llbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@color/activity_bg_color"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/toggleButton_SR"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:background="@drawable/tb_up_down"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/toggleButton_SR"
                android:layout_weight="2"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">
                <!--android:background="#00FF00"-->


                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/ukt"
                    android:text="Total Bills: "
                    android:textStyle="bold" />
                <!--   android:text="Approx.Amount:â‚¹ "-->
                <TextView
                    android:id="@+id/billCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toRightOf="@+id/tvAmount"
                    android:background="#4A7BCB"
                    android:inputType="number"
                    android:padding="15dp"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/paymentBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawableLeft="@drawable/ic_payment_method"
                    android:text="Pay"
                    android:visibility="gone"
                    android:textColor="@color/white" />
                <!-- android:layout_alignParentRight="true"-->
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activity_bg_color"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnClearAll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/corners_round_btn"
                android:drawableLeft="@drawable/ic_list_clear"
                android:drawablePadding="5dp"
                android:fontFamily="@font/fabrica"
                android:onClick="ClearList"
                android:paddingStart="10dp"
                android:text="Clear"
                android:textColor="@color/white"
                android:textSize="12sp" />

           <!-- <Button
                android:id="@+id/btnNew"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/corners_round_btn"
                android:drawableLeft="@drawable/ic_file_new"
                android:drawablePadding="5dp"
                android:fontFamily="@font/fabrica"
                android:onClick="Restart"
                android:paddingLeft="15px"
                android:text="NEW"
                android:textColor="@color/white"
                android:textSize="12sp" />-->

            <Button
                android:id="@+id/btnPrintSO"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/corners_round_btn"
                android:drawableLeft="@drawable/ic_exit"
                android:drawablePadding="5dp"
                android:fontFamily="@font/fabrica"
                android:paddingLeft="15dp"
                android:text="Exit"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>