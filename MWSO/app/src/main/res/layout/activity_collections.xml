<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Collections">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llbottom">

        <LinearLayout
            android:id="@+id/llx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:id="@+id/acvCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Party"
                        android:textColor="@color/custinfo_edittext_color" />

                    <ImageButton
                        android:id="@+id/imgBtnCustSearchbyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/acvCustomerName"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:src="@drawable/ic_search" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/ralewaybold"
                    android:text="Select Store"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/storeSelect"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:id="@+id/imgBtnSearchbyHUID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="resetSpinner"
                        android:layout_marginLeft="15dp"
                        android:layout_alignRight="@+id/storeSelect"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:src="@drawable/ic_reset" />
                </LinearLayout>

                <!--<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/etCustomerId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Store"
                        android:singleLine="true"
                        android:textColor="@color/custinfo_edittext_color" />

                    <ImageButton
                        android:id="@+id/imgBtnSearchbyHUID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/etCustomerId"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:src="@drawable/ic_search" />
                </RelativeLayout>-->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="5dp"
                android:background="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/ralewaybold"
                android:text="Payment"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/widget376"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioCOLPayType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioCOLCash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/ralewaybold"
                            android:onClick="onRadioButtonClicked"
                            android:text="Cash" />

                        <RadioButton
                            android:id="@+id/radioCOLCheque"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/ralewaybold"
                            android:onClick="onRadioButtonClicked"
                            android:text="Cheque" />

                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btnCOL_AutoFill"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="3dp"
                        android:enabled="false"
                        android:background="@color/green"
                        android:fontFamily="@font/fabrica"
                        android:onClick="AutoFillAmount"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:text="Auto Fill"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/cashAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/fabrica"
                android:hint="Enter the Amount"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/activity_bg_color"
                android:orientation="horizontal"
                android:weightSum="5">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/fabrica"
                    android:gravity="left"
                    android:text="Bill No"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/fabrica"
                    android:gravity="right"
                    android:text="Due"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/fabrica"
                    android:gravity="center"
                    android:text="Pay"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/fabrica"
                    android:gravity="center"
                    android:text="Select"
                    android:textColor="@color/black" />

            </LinearLayout>

            <ListView
                android:id="@+id/lvCollectionlist"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:transcriptMode="alwaysScroll" />

        </LinearLayout>


    </ScrollView>

    <include layout="@layout/bottom_sheet" />


    <LinearLayout
        android:id="@+id/llbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/activity_bg_color"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llAddRx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="20dp">
                <!--android:background="#00FF00"-->

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/ralewaybold"
                    android:text="Total MRP:₹ "
                    android:textStyle="bold" />
                <!--   android:text="Approx.Amount:₹ "-->
                <TextView
                    android:id="@+id/tvAmountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/tvAmount"
                    android:background="#4A7BCB"
                    android:fontFamily="@font/ralewaybold"
                    android:inputType="numberDecimal"
                    android:padding="15dp"
                    android:text=""
                    android:textColor="@color/white" />
                <!--android:layout_alignParentRight="true"-->

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>