<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delivery">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_bg_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fabrica"
            android:gravity="center"
            android:text="Delivery Information"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_margin="5dp"
        android:background="@drawable/border"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/fabrica"
                android:text="@string/delivery_date"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp">

                <EditText
                    android:id="@+id/deliverydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/custinfo_edittext_color" />

                <ImageButton
                    android:id="@+id/datepick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/deliverydate"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/ic_calender" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/fabrica"
                android:text="Vehicle No"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp">

                <EditText
                    android:id="@+id/etCustomerId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/custinfo_edittext_color" />

                <ImageButton
                    android:id="@+id/imgBtnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/etCustomerId"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/ic_search" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/fabrica"
                android:text="Customer Name"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.techsmith.mw_so.collection_utils.CSpinner
                android:id="@+id/custSelect"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:visibility="gone"
        android:background="@color/activity_bg_color"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/fabrica"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/fabrica"
            android:gravity="right"
            android:text="Test Customer"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:weightSum="5">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:background="@color/activity_bg_color"
            android:fontFamily="@font/fabrica"
            android:gravity="left"
            android:text="Bill No"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/activity_bg_color"
            android:fontFamily="@font/fabrica"
            android:gravity="right"
            android:text="Due"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:background="@color/activity_bg_color"
            android:fontFamily="@font/fabrica"
            android:gravity="center"
            android:text="Pay"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/activity_bg_color"
            android:fontFamily="@font/fabrica"
            android:gravity="center"
            android:text="Select"
            android:textColor="@color/black" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvInvoicelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/border"
        android:saveEnabled="true"
        android:scrollbars="vertical"
        android:transcriptMode="normal" />

    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/roundedshape">

        <TextView
            android:id="@+id/txtotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fabrica"
            android:text="OTP"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtotp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/txtotp"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/fabrica"
            android:gravity="left"
            android:hint="Enter OTP"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txttimer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/txtotp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/edtotp"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:textColor="#DC143C"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnsendotp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/txttimer"
            android:background="@drawable/corners_round_btn"
            android:drawableLeft="@drawable/ic_send"
            android:drawablePadding="2dp"
            android:fontFamily="@font/fabrica"
            android:gravity="center"
            android:padding="5dp"
            android:text="SEND OTP"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btngetcurrentloc"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/edtotp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/corners_round_btn"
            android:drawablePadding="1dp"
            android:fontFamily="@font/fabrica"
            android:padding="5dp"
            android:text="Reset"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/edtotp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/corners_round_btn"
            android:drawableLeft="@drawable/ic_save"
            android:drawablePadding="4dp"
            android:fontFamily="@font/fabrica"
            android:gravity="center"
            android:padding="5dp"
            android:text="SAVE"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>