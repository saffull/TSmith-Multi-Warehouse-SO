<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#f2f2f2"
        app:cardCornerRadius="5dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvIcon"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_invoice_new"
                android:gravity="center"
                android:text="A"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvEmailSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/tvIcon"
                android:layout_toRightOf="@+id/tvIcon"
                android:text="Store Id:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmailSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fabrica"
                android:layout_toEndOf="@+id/tvEmailSender"
                android:layout_toRightOf="@+id/tvEmailSender"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvEmailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmailSender"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/tvIcon"
                android:layout_toRightOf="@+id/tvIcon"
                android:text="Bill Id:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmailTitl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmailSender"
                android:layout_toEndOf="@+id/tvEmailTitle"
                android:layout_toRightOf="@+id/tvEmailTitle"
                android:fontFamily="@font/fabrica"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmailDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/tvEmailTitle"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/tvIcon"
                android:layout_toRightOf="@+id/tvIcon"
                android:text="Bill No:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmaidesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmailTitl"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvEmailDesc"
                android:layout_toRightOf="@+id/tvEmailDesc"
                android:fontFamily="@font/fabrica" />

            <TextView
                android:id="@+id/tvEmailDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmailDesc"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/tvIcon"
                android:layout_toRightOf="@+id/tvIcon"
                android:text="IRN Number:"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmailDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmailDetails"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/tvIcon"
                android:layout_toRightOf="@+id/tvIcon"
                android:fontFamily="@font/fabrica"
                android:textSize="12sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


